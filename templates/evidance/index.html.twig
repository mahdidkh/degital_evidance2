{% extends 'base.html.twig' %}

{% block title %}Evidance index{% endblock %}

{% block body %}
<h1>Evidance index</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Titre</th>
            <th>Description</th>
            <th>Remarque</th>
            <th>Fichier</th>
            <th>Hash</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
    {% for evidance in evidances %}
        <tr>
            <td>{{ evidance.id }}</td>
            <td>{{ evidance.tittel }}</td>
            <td>{{ evidance.discription }}</td>
            <td>{{ evidance.remarque }}</td>

            <td>
                {% if evidance.storedFilename %}
                    <a href="{{ asset('uploads/evidances/' ~ evidance.storedFilename) }}" target="_blank">
                        ouvrir
                    </a>
                {% else %}
                    <em>Aucun fichier</em>
                {% endif %}
            </td>

            <td>
                {% if evidance.fileHash %}
                    <small>{{ evidance.fileHash }}</small>
                {% else %}
                    -
                {% endif %}
            </td>

            <td>
                <a class="btn btn-info btn-sm" href="{{ path('app_evidance_show', {'id': evidance.id}) }}">Voir</a>
                <a class="btn btn-warning btn-sm" href="{{ path('app_evidance_edit', {'id': evidance.id}) }}">Modifier</a>

                {# Bouton supprimer #}
                <form action="{{ path('app_evidance_delete', {'id': evidance.id}) }}"
                      method="post"
                      style="display: inline-block;"
                      onsubmit="return confirm('Supprimer cet élément ?');">
                    
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ evidance.id) }}">
                    <button class="btn btn-danger btn-sm">Supprimer</button>
                </form>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="7">Aucun enregistrement trouvé.</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<a class="btn btn-primary" href="{{ path('app_evidance_new') }}">Créer nouveau</a>

{% endblock %}
