{% extends 'base.html.twig' %}

{% block title %}Investigateur Dashboard
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<style>:root
	{
		--bg-dark: #0f172a;
		--card-bg: #1e293b;
		--card-border: #334155;
		--text-primary: #f8fafc;
		--text-secondary: #94a3b8;
		--accent-blue: #3b82f6;
		--sidebar-width: 280px;
	}

	body {
		background-color: var(--bg-dark);
		color: var(--text-primary);
		font-family: 'Inter', system-ui, -apple-system, sans-serif;
		margin: 0;
		overflow-x: hidden;
	}

	.dashboard-container {
		margin-left: var(--sidebar-width);
		padding: 3rem;
		min-height: 100vh;
	}

	.page-header {
		margin-bottom: 3rem;
	}

	.welcome-text {
		color: var(--accent-blue);
		font-size: 0.875rem;
		text-transform: uppercase;
		letter-spacing: 0.1em;
		font-weight: 700;
	}

	.dashboard-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
		gap: 2.5rem;
	}

	.glass-card {
		background: rgba(30, 41, 59, 0.4);
		backdrop-filter: blur(12px);
		border: 1px solid rgba(59, 130, 246, 0.3);
		border-radius: 20px;
		padding: 2.5rem;
		box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
		transition: all 0.3s ease;
	}

	.glass-card:hover {
		transform: translateY(-4px);
		border-color: var(--accent-blue);
		background: rgba(30, 41, 59, 0.6);
	}

	.card-title {
		font-size: 1.5rem;
		font-weight: 800;
		margin-bottom: 2rem;
		color: #ffffff;
		display: flex;
		align-items: center;
		gap: 1rem;
	}

	.team-list {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.team-item {
		padding: 2rem 0;
		border-bottom: 1px solid rgba(255, 255, 255, 0.05);
	}

	.team-item:last-child {
		border-bottom: none;
	}

	.team-badge {
		display: inline-block;
		padding: 0.5rem 1.25rem;
		background: var(--accent-blue);
		color: #ffffff;
		border-radius: 10px;
		font-size: 1.125rem;
		font-weight: 700;
		margin-bottom: 1rem;
	}

	.supervisor-info {
		font-size: 1rem;
		color: var(--text-secondary);
		font-weight: 500;
	}

	.supervisor-name {
		color: var(--text-primary);
		font-weight: 600;
	}

	.btn-action {
		display: inline-flex;
		align-items: center;
		gap: 0.75rem;
		padding: 0.875rem 1.75rem;
		background: var(--accent-blue);
		color: white;
		text-decoration: none;
		border-radius: 12px;
		font-weight: 700;
		transition: all 0.2s;
		margin-top: 1.5rem;
	}

	.btn-action:hover {
		background: #2563eb;
		transform: scale(1.05);
	}

	.empty-state {
		color: var(--text-secondary);
		font-style: italic;
		text-align: center;
		padding: 2rem 0;
	}
</style>{% endblock %}{% block body %}
{% include 'componant/sidebar.html.twig' %}

<div class="dashboard-container">
	<header class="page-header">
		<span class="welcome-text">Overview</span>
		<h1 style="font-size: 2.25rem; font-weight: 800; margin: 0.5rem 0;">Dashboard</h1>
		<p style="color: #94a3b8;">Welcome back,
			{{ app.user.firstName }}
			{{ app.user.lastName }}</p>
	</header>

	<div
		class="dashboard-grid">
		{# My Teams Widget #}
		<div class="glass-card">
			<h2 class="card-title">
				<svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="none" viewbox="0 0 24 24" stroke="currentColor">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
				</svg>
				My Teams
			</h2>
			<div style="margin-bottom: 2rem;">
				<p style="color: var(--text-secondary); font-size: 1.125rem;">
					You are currently a member of
					<span style="color: var(--accent-blue); font-weight: 700;">{{ app.user.teams|length }}</span>
					teams.
				</p>
			</div>
			<a href="{{ path('app_investigateur_teams') }}" class="btn-action">
				<span>View All Teams</span>
				<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewbox="0 0 24 24" stroke="currentColor">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
				</svg>
			</a>
		</div>

		{# Case Work Widget #}
		<div class="glass-card">
			<h2 class="card-title">
				<svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="none" viewbox="0 0 24 24" stroke="currentColor">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"/>
				</svg>
				Assigned Cases
			</h2>
			<p style="color: var(--text-secondary); margin-bottom: 1.5rem;">Manage and collaborate on your assigned digital evidence cases.</p>
			<a href="{{ path('app_case_work_index') }}" class="btn-action">
				<span>View All Cases</span>
				<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewbox="0 0 24 24" stroke="currentColor">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
				</svg>
			</a>
		</div>
	</div>
</div>{% endblock %}
