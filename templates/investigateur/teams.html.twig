{% extends 'base.html.twig' %}

{% block title %}My Teams | Investigator
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<style>:root
	{
		--bg-dark: #0f172a;
		--card-bg: rgba(30, 41, 59, 0.7);
		--card-border: rgba(59, 130, 246, 0.2);
		--text-primary: #f8fafc;
		--text-secondary: #94a3b8;
		--accent-blue: #3b82f6;
		--sidebar-width: 280px;
	}

	body {
		background-color: var(--bg-dark);
		background-image: radial-gradient(circle at 100% 100%, rgba(59, 130, 246, 0.05) 0%, transparent 50%);
		color: var(--text-primary);
		font-family: 'Inter', system-ui, -apple-system, sans-serif;
		margin: 0;
	}

	.teams-container {
		margin-left: var(--sidebar-width);
		padding: 3rem;
		min-height: 100vh;
	}

	.btn-back {
		color: var(--text-secondary);
		text-decoration: none;
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		margin-bottom: 2rem;
		font-weight: 500;
		transition: all 0.2s;
		font-size: 0.9rem;
	}

	.btn-back:hover {
		color: var(--accent-blue);
		transform: translateX(-5px);
	}

	.page-header {
		margin-bottom: 3.5rem;
	}

	.welcome-text {
		color: var(--accent-blue);
		font-size: 0.875rem;
		text-transform: uppercase;
		letter-spacing: 0.2em;
		font-weight: 800;
		display: block;
		margin-bottom: 0.5rem;
	}

	.team-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
		gap: 2rem;
	}

	.team-card {
		background: var(--card-bg);
		backdrop-filter: blur(12px);
		border: 1px solid var(--card-border);
		border-radius: 24px;
		padding: 2.5rem;
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		display: flex;
		flex-direction: column;
		position: relative;
		overflow: hidden;
	}

	.team-card:hover {
		transform: translateY(-8px);
		border-color: var(--accent-blue);
		background: rgba(30, 41, 59, 0.9);
		box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.3);
	}

	.team-name-badge {
		display: inline-block;
		padding: 0.5rem 1.25rem;
		background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
		color: white;
		border-radius: 12px;
		font-weight: 800;
		font-size: 1rem;
		letter-spacing: 0.05em;
		margin-bottom: 2rem;
		box-shadow: 0 8px 16px rgba(59, 130, 246, 0.3);
		text-transform: uppercase;
		align-self: flex-start;
	}

	.supervisor-box {
		display: flex;
		align-items: center;
		gap: 1rem;
		background: rgba(15, 23, 42, 0.3);
		padding: 1.25rem;
		border-radius: 18px;
		border: 1px solid rgba(255, 255, 255, 0.03);
		margin-bottom: 1.5rem;
	}

	.avatar-circle {
		width: 44px;
		height: 44px;
		background: linear-gradient(135deg, rgba(59, 130, 246, 0.2), rgba(139, 92, 246, 0.2));
		border: 1px solid rgba(59, 130, 246, 0.3);
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		color: white;
		font-weight: 800;
		font-size: 1.1rem;
		flex-shrink: 0;
	}

	.supervisor-details {
		display: flex;
		flex-direction: column;
	}

	.supervisor-label {
		font-size: 0.65rem;
		text-transform: uppercase;
		letter-spacing: 0.15em;
		color: var(--text-secondary);
		font-weight: 800;
		margin-bottom: 0.2rem;
	}

	.supervisor-name {
		color: white;
		font-weight: 700;
		font-size: 1.1rem;
	}

	.btn-details {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		gap: 0.75rem;
		padding: 0.75rem 1.5rem;
		background: rgba(59, 130, 246, 0.1);
		color: var(--accent-blue);
		text-decoration: none;
		border-radius: 14px;
		font-weight: 700;
		transition: all 0.2s;
		border: 1px solid rgba(59, 130, 246, 0.2);
		margin-top: auto;
	}

	.btn-details:hover {
		background: var(--accent-blue);
		color: white;
		transform: scale(1.02);
		box-shadow: 0 10px 15px -3px rgba(59, 130, 246, 0.4);
	}

	.empty-teams {
		text-align: center;
		padding: 5rem 0;
		background: var(--card-bg);
		border-radius: 28px;
		border: 1px dashed var(--card-border);
	}
</style>{% endblock %}{% block body %}
{% include 'componant/sidebar_investigateur.html.twig' %}

<div class="teams-container">
	<a href="{{ path('app_investigateur_index') }}" class="btn-back">
		<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewbox="0 0 24 24" stroke="currentColor">
			<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
		</svg>
		Back to Dashboard
	</a>

	<header class="page-header">
		<span class="welcome-text">Team Cooperation</span>
		<h1 style="font-size: 2.5rem; font-weight: 900; margin: 0; color: white;">My Operative Teams</h1>
		<p style="color: var(--text-secondary); margin-top: 0.5rem; font-weight: 500;">You are currently assigned to
			{{ app.user.teams|length }}
			investigative team{{ app.user.teams|length != 1 ? 's' : '' }}.</p>
	</header>

	{% if app.user.teams|length > 0 %}
		<div class="team-grid">
			{% for team in app.user.teams %}
				<div class="team-card">
					<div class="team-name-badge">{{ team.name }}</div>

					<div class="supervisor-box">
						<div class="avatar-circle">{{ team.supervisor.firstName|first|upper }}</div>
						<div class="supervisor-details">
							<span class="supervisor-label">Command Officer</span>
							<span class="supervisor-name">{{ team.supervisor.firstName }}
								{{ team.supervisor.lastName }}</span>
						</div>
					</div>

					<a href="{{ path('app_investigateur_team_members', {'id': team.id}) }}" class="btn-details">
						<span>View Team Roster</span>
						<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="none" viewbox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
						</svg>
					</a>
				</div>
			{% endfor %}
		</div>
	{% else %}
		<div class="empty-teams">
			<svg xmlns="http://www.w3.org/2000/svg" style="width: 4rem; height: 4rem; color: #334155; margin-bottom: 1.5rem;" fill="none" viewbox="0 0 24 24" stroke="currentColor">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
			</svg>
			<h3 style="color: white; font-size: 1.5rem; margin-bottom: 0.5rem;">No active teams</h3>
			<p style="color: var(--text-secondary);">You are not assigned to any investigative teams yet.</p>
		</div>
	{% endif %}
</div>{% endblock %}
