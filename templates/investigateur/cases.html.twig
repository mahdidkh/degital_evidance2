{% extends 'base.html.twig' %}

{% block title %}My Cases
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<style>:root
	{
		--bg-dark: #0f172a;
		--card-bg: rgba(30, 41, 59, 0.7);
		--card-border: rgba(59, 130, 246, 0.2);
		--text-primary: #f8fafc;
		--text-secondary: #94a3b8;
		--accent-blue: #3b82f6;
		--accent-purple: #8b5cf6;
		--sidebar-width: 280px;
	}

	body {
		background-color: var(--bg-dark);
		background-image: radial-gradient(circle at 100% 0%, rgba(59, 130, 246, 0.05) 0%, transparent 50%);
		color: var(--text-primary);
		font-family: 'Inter', system-ui, -apple-system, sans-serif;
		margin: 0;
	}

	.cases-container {
		margin-left: var(--sidebar-width);
		padding: 3rem;
		min-height: 100vh;
	}

	.btn-back {
		color: var(--text-secondary);
		text-decoration: none;
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		margin-bottom: 2rem;
		font-weight: 500;
		transition: all 0.2s;
		font-size: 0.9rem;
	}

	.btn-back:hover {
		color: var(--accent-blue);
		transform: translateX(-5px);
	}

	.page-header {
		margin-bottom: 3.5rem;
	}

	.welcome-text {
		color: var(--accent-blue);
		font-size: 0.875rem;
		text-transform: uppercase;
		letter-spacing: 0.2em;
		font-weight: 800;
		display: block;
		margin-bottom: 0.5rem;
	}

	.cases-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(380px, 1fr));
		gap: 2rem;
	}

	.case-card {
		background: var(--card-bg);
		backdrop-filter: blur(12px);
		border: 1px solid var(--card-border);
		border-radius: 24px;
		padding: 2rem;
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		cursor: pointer;
		display: flex;
		flex-direction: column;
		height: 100%;
		position: relative;
		overflow: hidden;
	}

	.case-card::after {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 4px;
		background: var(--accent-blue);
		opacity: 0;
		transition: opacity 0.3s;
	}

	.case-card:hover {
		transform: translateY(-8px);
		border-color: var(--accent-blue);
		background: rgba(30, 41, 59, 0.9);
		box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.3);
	}

	.case-card:hover::after {
		opacity: 1;
	}

	.case-title {
		font-size: 1.4rem;
		font-weight: 800;
		color: white;
		margin: 0 0 1rem;
		line-height: 1.2;
	}

	.case-description {
		color: var(--text-secondary);
		margin-bottom: 2rem;
		line-height: 1.6;
		display: -webkit-box;
		-webkit-line-clamp: 3;
		-webkit-box-orient: vertical;
		overflow: hidden;
		font-size: 0.95rem;
		flex-grow: 1;
	}

	.case-meta {
		display: flex;
		flex-wrap: wrap;
		gap: 1rem;
		margin-top: auto;
		padding-top: 1.5rem;
		border-top: 1px solid rgba(255, 255, 255, 0.05);
		align-items: center;
	}

	.badge-group {
		display: flex;
		gap: 0.5rem;
		margin-bottom: 1.25rem;
	}

	.priority-badge {
		padding: 0.4rem 0.8rem;
		border-radius: 8px;
		font-size: 0.7rem;
		font-weight: 800;
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}

	.priority-low {
		background: rgba(34, 197, 94, 0.1);
		color: #22c55e;
		border: 1px solid rgba(34, 197, 94, 0.2);
	}
	.priority-medium {
		background: rgba(234, 179, 8, 0.1);
		color: #eab308;
		border: 1px solid rgba(234, 179, 8, 0.2);
	}
	.priority-high {
		background: rgba(249, 115, 22, 0.1);
		color: #f97316;
		border: 1px solid rgba(249, 115, 22, 0.2);
	}
	.priority-critical {
		background: rgba(239, 68, 68, 0.1);
		color: #ef4444;
		border: 1px solid rgba(239, 68, 68, 0.2);
	}

	.status-badge {
		padding: 0.4rem 0.8rem;
		border-radius: 8px;
		font-size: 0.7rem;
		font-weight: 700;
		text-transform: uppercase;
		display: flex;
		align-items: center;
		gap: 0.4rem;
	}

	.status-open {
		background: rgba(59, 130, 246, 0.1);
		color: #3b82f6;
		border: 1px solid rgba(59, 130, 246, 0.2);
	}
	.status-in_progress {
		background: rgba(168, 85, 247, 0.1);
		color: #a855f7;
		border: 1px solid rgba(168, 85, 247, 0.2);
	}
	.status-closed {
		background: rgba(107, 114, 128, 0.1);
		color: #9ca3af;
		border: 1px solid rgba(107, 114, 128, 0.2);
	}

	.team-info {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		padding: 0.4rem 0.8rem;
		background: rgba(139, 92, 246, 0.05);
		border: 1px solid rgba(139, 92, 246, 0.2);
		border-radius: 8px;
		font-size: 0.8rem;
		color: var(--accent-purple);
		font-weight: 600;
	}

	.date-info {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		color: var(--text-secondary);
		font-size: 0.8rem;
		font-weight: 500;
	}

	.no-cases {
		text-align: center;
		padding: 5rem 0;
		background: var(--card-bg);
		border-radius: 24px;
		border: 1px dashed var(--card-border);
	}
</style>{% endblock %}{% block body %}
{% include 'componant/sidebar_investigateur.html.twig' %}

<div class="cases-container">
	<a href="{{ path('app_investigateur_index') }}" class="btn-back">
		<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewbox="0 0 24 24" stroke="currentColor">
			<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
		</svg>
		Back to Dashboard
	</a>

	<div class="page-header">
		<span class="welcome-text">Case Management</span>
		<h1 style="font-size: 2.5rem; font-weight: 900; margin: 0; color: white;">My Assigned Cases</h1>
		<p style="color: var(--text-secondary); margin-top: 0.5rem; font-weight: 500;">
			You have
			{{ cases|length }}
			case{{ cases|length != 1 ? 's' : '' }}
			currently assigned for investigation.
		</p>
	</div>

	{% if cases|length > 0 %}
		<div class="cases-grid">
			{% for casework in cases %}
				<div class="case-card" onclick="window.location='{{ path('app_investigateur_case_show', {'id': casework.id}) }}'">
					<div class="badge-group">
						<span class="priority-badge priority-{{ casework.priority }}">
							{{ casework.priority }}
						</span>
						<span class="status-badge status-{{ casework.status }}">
							<span style="width: 6px; height: 6px; border-radius: 50%; background: currentColor;"></span>
							{{ casework.status|replace({'_': ' '}) }}
						</span>
					</div>

					<h3 class="case-title">{{ casework.title }}</h3>
					<p class="case-description">{{ casework.description }}</p>

					<div class="case-meta">
						<div class="date-info">
							<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewbox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
							</svg>
							{{ casework.createdAt|date('M d, Y') }}
						</div>

						{% if casework.assignedTeam %}
							<div class="team-info">
								<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewbox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
								</svg>
								{{ casework.assignedTeam.name }}
							</div>
						{% endif %}
					</div>
				</div>
			{% endfor %}
		</div>
	{% else %}
		<div class="no-cases">
			<svg xmlns="http://www.w3.org/2000/svg" style="width: 4rem; height: 4rem; color: #334155; margin: 0 auto 1.5rem;" fill="none" viewbox="0 0 24 24" stroke="currentColor">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
			</svg>
			<h3 style="color: white; font-size: 1.5rem; margin-bottom: 0.5rem;">No cases assigned</h3>
			<p style="color: var(--text-secondary);">You'll see cases here once a supervisor assigns them to your teams.</p>
		</div>
	{% endif %}
</div>{% endblock %}
