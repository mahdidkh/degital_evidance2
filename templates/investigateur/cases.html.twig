{% extends 'base.html.twig' %}

{% block title %}My Cases
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<style>:root
	{
		--bg-dark: #0f172a;
		--card-bg: #1e293b;
		--text-primary: #f8fafc;
		--text-secondary: #94a3b8;
		--accent-blue: #3b82f6;
		--sidebar-width: 280px;
	}

	body {
		background-color: var(--bg-dark);
		color: var(--text-primary);
		font-family: 'Inter', system-ui, -apple-system, sans-serif;
		margin: 0;
	}

	.cases-container {
		margin-left: var(--sidebar-width);
		padding: 3rem;
		min-height: 100vh;
	}

	.btn-back {
		color: var(--text-secondary);
		text-decoration: none;
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		margin-bottom: 2rem;
		font-weight: 500;
		transition: color 0.2s;
	}

	.btn-back:hover {
		color: white;
	}

	.page-header {
		margin-bottom: 3rem;
	}

	.cases-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
		gap: 2rem;
	}

	.case-card {
		background: rgba(30, 41, 59, 0.4);
		backdrop-filter: blur(12px);
		border: 1px solid rgba(59, 130, 246, 0.3);
		border-radius: 20px;
		padding: 2rem;
		transition: all 0.3s ease;
		cursor: pointer;
	}

	.case-card:hover {
		transform: translateY(-5px);
		border-color: var(--accent-blue);
		background: rgba(30, 41, 59, 0.6);
	}

	.case-title {
		font-size: 1.25rem;
		font-weight: 800;
		color: white;
		margin: 0 0 0.75rem;
	}

	.case-description {
		color: var(--text-secondary);
		margin-bottom: 1.5rem;
		line-height: 1.6;
		display: -webkit-box;
		-webkit-line-clamp: 3;
		-webkit-box-orient: vertical;
		overflow: hidden;
	}

	.case-meta {
		display: flex;
		flex-wrap: wrap;
		gap: 0.75rem;
		margin-top: 1.5rem;
		padding-top: 1.5rem;
		border-top: 1px solid rgba(59, 130, 246, 0.2);
		align-items: center;
	}

	.priority-badge {
		padding: 0.375rem 0.875rem;
		border-radius: 8px;
		font-size: 0.75rem;
		font-weight: 700;
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}

	.priority-low {
		background: linear-gradient(135deg, #22c55e, #16a34a);
		color: white;
	}
	.priority-medium {
		background: linear-gradient(135deg, #eab308, #ca8a04);
		color: white;
	}
	.priority-high {
		background: linear-gradient(135deg, #f97316, #ea580c);
		color: white;
	}
	.priority-critical {
		background: linear-gradient(135deg, #ef4444, #dc2626);
		color: white;
	}

	.status-badge {
		padding: 0.375rem 0.875rem;
		border-radius: 8px;
		font-size: 0.75rem;
		font-weight: 600;
		text-transform: uppercase;
	}

	.status-open {
		background: rgba(59, 130, 246, 0.2);
		color: #3b82f6;
		border: 1px solid rgba(59, 130, 246, 0.4);
	}
	.status-in_progress {
		background: rgba(168, 85, 247, 0.2);
		color: #a855f7;
		border: 1px solid rgba(168, 85, 247, 0.4);
	}
	.status-closed {
		background: rgba(107, 114, 128, 0.2);
		color: #9ca3af;
		border: 1px solid rgba(107, 114, 128, 0.4);
	}

	.team-badge {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		padding: 0.375rem 0.875rem;
		background: rgba(59, 130, 246, 0.1);
		border: 1px solid rgba(59, 130, 246, 0.3);
		border-radius: 8px;
		font-size: 0.875rem;
		color: var(--accent-blue);
		font-weight: 600;
	}

	.no-cases {
		text-align: center;
		padding: 4rem 0;
		color: var(--text-secondary);
	}
</style>{% endblock %}{% block body %}
{% include 'componant/sidebar.html.twig' %}

<div class="cases-container">
	<a href="{{ path('app_investigateur_index') }}" class="btn-back">
		<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewbox="0 0 24 24" stroke="currentColor">
			<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
		</svg>
		Back to Dashboard
	</a>

	<div class="page-header">
		<h1 style="font-size: 2.5rem; font-weight: 800; margin: 0;">My Cases</h1>
		<p style="color: var(--text-secondary); margin-top: 0.5rem;">
			{{ cases|length }}
			case{{ cases|length != 1 ? 's' : '' }}
			assigned to your teams
		</p>
	</div>

	{% if cases|length > 0 %}
		<div class="cases-grid">
			{% for casework in cases %}
				<div class="case-card" onclick="window.location='{{ path('app_investigateur_case_show', {'id': casework.id}) }}'">
					<h3 class="case-title">{{ casework.tittel }}</h3>

					<div style="display: flex; gap: 0.5rem; margin-bottom: 1rem;">
						<span class="priority-badge priority-{{ casework.priority }}">
							{{ casework.priority }}
						</span>
						<span class="status-badge status-{{ casework.statu }}">
							{{ casework.statu|replace({'_': ' '}) }}
						</span>
					</div>

					<p class="case-description">{{ casework.discription }}</p>

					<div class="case-meta">
						<div style="display: flex; align-items: center; gap: 0.5rem; color: var(--text-secondary); font-size: 0.875rem;">
							<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewbox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
							</svg>
							{{ casework.createdAt|date('M d, Y') }}
						</div>

						{% if casework.assignedTeam %}
							<div class="team-badge">
								<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewbox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
								</svg>
								{{ casework.assignedTeam.name }}
							</div>
						{% endif %}
					</div>
				</div>
			{% endfor %}
		</div>
	{% else %}
		<div class="no-cases">
			<svg xmlns="http://www.w3.org/2000/svg" style="width: 4rem; height: 4rem; color: #334155; margin: 0 auto 1.5rem;" fill="none" viewbox="0 0 24 24" stroke="currentColor">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
			</svg>
			<p style="font-size: 1.125rem;">No cases assigned to your teams yet.</p>
		</div>
	{% endif %}
</div>{% endblock %}
