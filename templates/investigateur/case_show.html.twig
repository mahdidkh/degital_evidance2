{% extends 'base.html.twig' %}

{% block title %}
	{{ casework.title }}
	| Investigator
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<style>:root
	{
		--bg-dark: #0f172a;
		--card-bg: rgba(30, 41, 59, 0.7);
		--card-border: rgba(59, 130, 246, 0.2);
		--text-primary: #f8fafc;
		--text-secondary: #94a3b8;
		--accent-blue: #3b82f6;
		--accent-purple: #8b5cf6;
		--sidebar-width: 280px;
	}

	body {
		background-color: var(--bg-dark);
		background-image: radial-gradient(circle at 0% 100%, rgba(139, 92, 246, 0.05) 0%, transparent 50%);
		color: var(--text-primary);
		font-family: 'Inter', system-ui, -apple-system, sans-serif;
		margin: 0;
	}

	.case-container {
		margin-left: var(--sidebar-width);
		padding: 3rem;
		min-height: 100vh;
	}

	.btn-back {
		color: var(--text-secondary);
		text-decoration: none;
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		margin-bottom: 2rem;
		font-weight: 500;
		transition: all 0.2s;
		font-size: 0.9rem;
	}

	.btn-back:hover {
		color: var(--accent-blue);
		transform: translateX(-5px);
	}

	.glass-card {
		background: var(--card-bg);
		backdrop-filter: blur(16px);
		border: 1px solid var(--card-border);
		border-radius: 28px;
		padding: 3.5rem;
		box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
	}

	.case-header {
		margin-bottom: 3rem;
		padding-bottom: 2.5rem;
		border-bottom: 1px solid rgba(255, 255, 255, 0.05);
	}

	.case-title {
		font-size: 3rem;
		font-weight: 900;
		margin: 0 0 1.5rem;
		color: white;
		letter-spacing: -0.02em;
		line-height: 1.1;
	}

	.badges-row {
		display: flex;
		gap: 1.25rem;
		align-items: center;
		flex-wrap: wrap;
	}

	.priority-badge {
		padding: 0.5rem 1.25rem;
		border-radius: 12px;
		font-size: 0.8rem;
		font-weight: 800;
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}

	.priority-low {
		background: rgba(34, 197, 94, 0.1);
		color: #22c55e;
		border: 1px solid rgba(34, 197, 94, 0.2);
	}
	.priority-medium {
		background: rgba(234, 179, 8, 0.1);
		color: #eab308;
		border: 1px solid rgba(234, 179, 8, 0.2);
	}
	.priority-high {
		background: rgba(249, 115, 22, 0.1);
		color: #f97316;
		border: 1px solid rgba(249, 115, 22, 0.2);
	}
	.priority-critical {
		background: rgba(239, 68, 68, 0.1);
		color: #ef4444;
		border: 1px solid rgba(239, 68, 68, 0.2);
	}

	.status-badge {
		padding: 0.5rem 1.25rem;
		border-radius: 12px;
		font-size: 0.8rem;
		font-weight: 700;
		text-transform: uppercase;
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}

	.status-open {
		background: rgba(59, 130, 246, 0.1);
		color: #3b82f6;
		border: 1px solid rgba(59, 130, 246, 0.2);
	}
	.status-in_progress {
		background: rgba(168, 85, 247, 0.1);
		color: #a855f7;
		border: 1px solid rgba(168, 85, 247, 0.2);
	}
	.status-closed {
		background: rgba(107, 114, 128, 0.1);
		color: #9ca3af;
		border: 1px solid rgba(107, 114, 128, 0.2);
	}

	.info-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 2.5rem;
		margin-bottom: 3rem;
	}

	.info-item {
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
		padding: 1.5rem;
		background: rgba(15, 23, 42, 0.3);
		border-radius: 20px;
		border: 1px solid rgba(255, 255, 255, 0.03);
	}

	.info-label {
		font-size: 0.7rem;
		font-weight: 800;
		text-transform: uppercase;
		letter-spacing: 0.15em;
		color: var(--text-secondary);
	}

	.info-value {
		font-size: 1.25rem;
		font-weight: 700;
		color: white;
	}

	.description-section {
		margin-top: 3rem;
	}

	.section-title {
		font-size: 1.5rem;
		font-weight: 800;
		margin-bottom: 1.5rem;
		color: white;
		display: flex;
		align-items: center;
		gap: 1rem;
	}

	.description-text {
		color: var(--text-secondary);
		line-height: 1.8;
		font-size: 1.1rem;
		padding: 2rem;
		background: rgba(15, 23, 42, 0.3);
		border-radius: 20px;
		border: 1px solid rgba(255, 255, 255, 0.03);
	}

	.team-tag {
		display: inline-flex;
		align-items: center;
		gap: 0.6rem;
		color: var(--accent-purple);
		font-weight: 700;
	}

	.btn-explore {
		display: inline-flex;
		align-items: center;
		gap: 0.75rem;
		padding: 0.75rem 1.75rem;
		background: linear-gradient(135deg, #3b82f6, #8b5cf6);
		color: white;
		border-radius: 14px;
		text-decoration: none;
		font-weight: 800;
		font-size: 0.9rem;
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		box-shadow: 0 10px 20px -5px rgba(59, 130, 246, 0.5);
		margin-left: auto;
	}

	.btn-explore:hover {
		transform: translateY(-3px) scale(1.03);
		box-shadow: 0 15px 30px -5px rgba(59, 130, 246, 0.6);
		filter: brightness(1.1);
	}

	.readonly-alert {
		background: rgba(245, 158, 11, 0.1);
		border: 1px solid rgba(245, 158, 11, 0.3);
		border-radius: 16px;
		padding: 1.25rem 2rem;
		color: #f59e0b;
		display: flex;
		align-items: center;
		gap: 1rem;
		margin-bottom: 2.5rem;
		font-weight: 600;
		font-size: 0.95rem;
	}
</style>{% endblock %}{% block body %}
{% include 'componant/sidebar_investigateur.html.twig' %}

<div class="case-container">
	<a href="{{ path('app_investigateur_cases') }}" class="btn-back">
		<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewbox="0 0 24 24" stroke="currentColor">
			<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
		</svg>
		Back to My Cases
	</a>

	{% if casework.status != 'open' %}
		<div class="readonly-alert">
			<span class="material-symbols-outlined" style="font-size: 1.5rem;">lock</span>
			<span>This forensic case is currently
				<strong>{{ casework.status|upper }}</strong>. Security protocols have engaged READ-ONLY mode for all evidence.</span>
		</div>
	{% endif %}

	<div class="glass-card">
		<div class="case-header">
			<h1 class="case-title">{{ casework.title }}</h1>
			<div class="badges-row">
				<span class="priority-badge priority-{{ casework.priority }}">
					{{ casework.priority }}
					Priority
				</span>
				<span class="status-badge status-{{ casework.status }}">
					<span style="width: 8px; height: 8px; border-radius: 50%; background: currentColor;"></span>
					{{ casework.status|replace({'_': ' '}) }}
				</span>
				<a href="{{ path('app_investigateur_case_explore', {id: casework.id}) }}" class="btn-explore">
					<span class="material-symbols-outlined">rocket_launch</span>
					Launch Forensic Explorer
				</a>
			</div>
		</div>

		<div class="info-grid">
			<div class="info-item">
				<div class="info-label">Identification ID</div>
				<div class="info-value">#{{ casework.id }}</div>
			</div>

			<div class="info-item">
				<div class="info-label">Assignment Created</div>
				<div class="info-value">{{ casework.createdAt|date('F d, Y') }}</div>
			</div>

			<div class="info-item">
				<div class="info-label">Supervising Officer</div>
				<div class="info-value">{{ casework.createdBy.firstName }}
					{{ casework.createdBy.lastName }}</div>
			</div>

			<div class="info-item">
				<div class="info-label">Operational Team</div>
				<div class="info-value">
					{% if casework.assignedTeam %}
						<span class="team-tag">
							<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewbox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.123-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
							</svg>
							{{ casework.assignedTeam.name }}
						</span>
					{% else %}
						<span style="color: var(--text-secondary); font-style: italic;">Unassigned</span>
					{% endif %}
				</div>
			</div>
		</div>

		<div class="description-section">
			<h2 class="section-title">
				<svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="none" viewbox="0 0 24 24" stroke="currentColor">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7"/>
				</svg>
				Investigation Brief
			</h2>
			<div class="description-text">{{ casework.description }}</div>
		</div>
	</div>
</div>{% endblock %}
