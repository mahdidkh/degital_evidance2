{% extends 'base.html.twig' %}

{% block title %}
	{{ team.name }}
	| Team Roster
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<style>:root
	{
		--bg-dark: #0f172a;
		--card-bg: rgba(30, 41, 59, 0.7);
		--card-border: rgba(59, 130, 246, 0.2);
		--text-primary: #f8fafc;
		--text-secondary: #94a3b8;
		--accent-blue: #3b82f6;
		--accent-purple: #8b5cf6;
		--sidebar-width: 280px;
	}

	body {
		background-color: var(--bg-dark);
		background-image: radial-gradient(circle at 100% 0%, rgba(139, 92, 246, 0.05) 0%, transparent 50%);
		color: var(--text-primary);
		font-family: 'Inter', system-ui, -apple-system, sans-serif;
		margin: 0;
	}

	.team-members-container {
		margin-left: var(--sidebar-width);
		padding: 3rem;
		min-height: 100vh;
	}

	.btn-back {
		color: var(--text-secondary);
		text-decoration: none;
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		margin-bottom: 2rem;
		font-weight: 500;
		transition: all 0.2s;
		font-size: 0.9rem;
	}

	.btn-back:hover {
		color: var(--accent-blue);
		transform: translateX(-5px);
	}

	.page-header {
		margin-bottom: 3.5rem;
	}

	.team-name-tag {
		display: inline-block;
		padding: 0.4rem 1rem;
		background: rgba(59, 130, 246, 0.1);
		color: var(--accent-blue);
		border: 1px solid rgba(59, 130, 246, 0.3);
		border-radius: 8px;
		font-weight: 700;
		margin-bottom: 1rem;
		font-size: 0.8rem;
		text-transform: uppercase;
		letter-spacing: 0.1em;
	}

	.glass-card {
		background: var(--card-bg);
		backdrop-filter: blur(16px);
		border: 1px solid var(--card-border);
		border-radius: 28px;
		padding: 3rem;
		box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
	}

	.section-title {
		font-size: 1.25rem;
		font-weight: 800;
		margin-bottom: 2rem;
		color: white;
		display: flex;
		align-items: center;
		gap: 0.75rem;
	}

	.members-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
		gap: 1.5rem;
		margin-bottom: 4rem;
	}

	.member-card {
		background: rgba(15, 23, 42, 0.3);
		border: 1px solid rgba(255, 255, 255, 0.05);
		border-radius: 20px;
		padding: 1.5rem;
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		display: flex;
		align-items: center;
		gap: 1.25rem;
	}

	.member-card:hover {
		transform: translateY(-5px);
		border-color: var(--accent-blue);
		background: rgba(15, 23, 42, 0.5);
		box-shadow: 0 10px 20px -5px rgba(0, 0, 0, 0.2);
	}

	.avatar-circle {
		width: 52px;
		height: 52px;
		background: linear-gradient(135deg, rgba(59, 130, 246, 0.1), rgba(139, 92, 246, 0.1));
		border: 1px solid rgba(59, 130, 246, 0.3);
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		color: white;
		font-weight: 800;
		font-size: 1.25rem;
		flex-shrink: 0;
	}

	.member-info {
		flex: 1;
		min-width: 0;
	}

	.member-name {
		font-weight: 700;
		font-size: 1.1rem;
		color: white;
		margin-bottom: 0.2rem;
		white-space: nowrap;
		overflow: hidden;
		text-overflow: ellipsis;
	}

	.member-email {
		font-size: 0.8rem;
		color: var(--text-secondary);
		white-space: nowrap;
		overflow: hidden;
		text-overflow: ellipsis;
	}

	.role-tag {
		display: inline-block;
		padding: 0.25rem 0.6rem;
		background: rgba(139, 92, 246, 0.1);
		border: 1px solid rgba(139, 92, 246, 0.2);
		color: var(--accent-purple);
		border-radius: 6px;
		font-size: 0.65rem;
		font-weight: 800;
		text-transform: uppercase;
		margin-top: 0.6rem;
	}

	.creator-card {
		background: linear-gradient(135deg, rgba(59, 130, 246, 0.1), rgba(139, 92, 246, 0.1));
		border: 1px solid rgba(59, 130, 246, 0.3);
		border-radius: 20px;
		padding: 2rem;
		margin-bottom: 3.5rem;
		display: flex;
		align-items: center;
		gap: 2rem;
		position: relative;
		overflow: hidden;
	}

	.creator-card::after {
		content: 'COMMAND';
		position: absolute;
		right: -10px;
		bottom: -10px;
		font-size: 4rem;
		font-weight: 900;
		color: white;
		opacity: 0.03;
		pointer-events: none;
	}

	.case-list-grid {
		display: grid;
		grid-template-columns: 1fr;
		gap: 1.25rem;
	}

	.team-case-item {
		background: rgba(15, 23, 42, 0.3);
		border: 1px solid rgba(255, 255, 255, 0.05);
		border-radius: 20px;
		padding: 1.75rem;
		transition: all 0.2s;
		cursor: pointer;
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.team-case-item:hover {
		background: rgba(15, 23, 42, 0.5);
		border-color: var(--accent-blue);
		transform: translateX(8px);
	}

	.case-badge {
		padding: 0.35rem 0.75rem;
		border-radius: 8px;
		font-size: 0.7rem;
		font-weight: 800;
		text-transform: uppercase;
	}

	.priority-low {
		background: rgba(34, 197, 94, 0.1);
		color: #22c55e;
		border: 1px solid rgba(34, 197, 94, 0.2);
	}
	.priority-medium {
		background: rgba(234, 179, 8, 0.1);
		color: #eab308;
		border: 1px solid rgba(234, 179, 8, 0.2);
	}
	.priority-high {
		background: rgba(249, 115, 22, 0.1);
		color: #f97316;
		border: 1px solid rgba(249, 115, 22, 0.2);
	}
	.priority-critical {
		background: rgba(239, 68, 68, 0.1);
		color: #ef4444;
		border: 1px solid rgba(239, 68, 68, 0.2);
	}

	.empty-state {
		text-align: center;
		padding: 4rem 0;
		color: var(--text-secondary);
		background: rgba(15, 23, 42, 0.2);
		border-radius: 20px;
		border: 1px dashed rgba(255, 255, 255, 0.05);
	}
</style>{% endblock %}{% block body %}
{% include 'componant/sidebar_investigateur.html.twig' %}

<div class="team-members-container">
	<a href="{{ path('app_investigateur_teams') }}" class="btn-back">
		<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewbox="0 0 24 24" stroke="currentColor">
			<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
		</svg>
		Back to My Teams
	</a>

	<header class="page-header">
		<div class="team-name-tag">{{ team.name }}</div>
		<h1 style="font-size: 2.75rem; font-weight: 900; margin: 0; color: white; letter-spacing: -0.02em;">Digital Evidence Team</h1>
		<p style="color: var(--text-secondary); margin-top: 0.5rem; font-weight: 500;">Secure forensic collaboration roster</p>
	</header>

	<div class="glass-card">
		<div class="section-title">
			<span class="material-symbols-outlined" style="color: var(--accent-blue)">stars</span>
			Commanding Officer
		</div>

		<div class="creator-card">
			<div class="avatar-circle" style="width: 70px; height: 70px; font-size: 1.75rem;">{{ team.supervisor.firstName|first|upper }}</div>
			<div class="member-info">
				<div class="member-name" style="font-size: 1.5rem;">{{ team.supervisor.firstName }}
					{{ team.supervisor.lastName }}</div>
				<div class="member-email" style="font-size: 0.9rem;">{{ team.supervisor.email }}</div>
				<span class="role-tag" style="background: rgba(59, 130, 246, 0.1); color: var(--accent-blue); border-color: rgba(59, 130, 246, 0.2);">Team Supervisor / Creator</span>
			</div>
		</div>

		<div class="section-title">
			<span class="material-symbols-outlined" style="color: var(--accent-purple)">groups</span>
			Investigative Specialists ({{ team.investigateurs|length }})
		</div>

		{% if team.investigateurs|length > 0 %}
			<div class="members-grid">
				{% for investigator in team.investigateurs %}
					<div class="member-card">
						<div class="avatar-circle">{{ investigator.firstName|first|upper }}</div>
						<div class="member-info">
							<div class="member-name">{{ investigator.firstName }}
								{{ investigator.lastName }}</div>
							<div class="member-email">{{ investigator.email }}</div>
							<span class="role-tag">Investigator</span>
						</div>
					</div>
				{% endfor %}
			</div>
		{% else %}
			<div class="empty-state">
				<span class="material-symbols-outlined" style="font-size: 3rem; opacity: 0.3; margin-bottom: 1rem;">person_off</span>
				<p>No investigators have been assigned to this unit yet.</p>
			</div>
		{% endif %}

		<div class="section-title" style="margin-top: 2rem;">
			<span class="material-symbols-outlined" style="color: var(--accent-blue)">folder_shared</span>
			Active Operational Cases ({{ team.caseWorks|length }})
		</div>

		{% if team.caseWorks|length > 0 %}
			<div class="case-list-grid">
				{% for casework in team.caseWorks %}
					<div class="team-case-item" onclick="window.location='{{ path('app_investigateur_case_show', {'id': casework.id}) }}'">
						<div style="flex: 1; min-width: 0;">
							<div style="font-weight: 800; font-size: 1.25rem; color: white; margin-bottom: 0.5rem;">{{ casework.title }}</div>
							<div style="display: flex; gap: 0.75rem; margin-bottom: 1rem;">
								<span class="case-badge priority-{{ casework.priority }}">{{ casework.priority }}</span>
								<span class="case-badge" style="background: rgba(255,255,255,0.05); color: var(--text-secondary); border: 1px solid rgba(255,255,255,0.1);">{{ casework.status|replace({'_': ' '}) }}</span>
							</div>
							<p style="color: var(--text-secondary); font-size: 0.9rem; margin: 0; display: -webkit-box; -webkit-line-clamp: 1; -webkit-box-orient: vertical; overflow: hidden;">
								{{ casework.description }}
							</p>
						</div>
						<span class="material-symbols-outlined" style="color: var(--accent-blue); margin-left: 2rem;">arrow_forward_ios</span>
					</div>
				{% endfor %}
			</div>
		{% else %}
			<div class="empty-state">
				<span class="material-symbols-outlined" style="font-size: 3rem; opacity: 0.3; margin-bottom: 1rem;">inventory_2</span>
				<p>This team currently has no forensic cases assigned.</p>
			</div>
		{% endif %}
	</div>
</div>{% endblock %}
