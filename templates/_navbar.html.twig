{% if app.user %}
<nav style="background-color: #333; padding: 1rem; margin-bottom: 2rem;">
    <div style="max-width: 1200px; margin: 0 auto; display: flex; justify-content: space-between; align-items: center;">
        <div style="color: white; font-weight: bold; font-size: 1.2rem;">
            Digital Evidence
        </div>
        <div style="display: flex; gap: 1rem; align-items: center;">
            <span style="color: white;">{{ app.user.email }}</span>
            <a href="{{ path('app_logout') }}" style="background-color: #dc3545; color: white; padding: 0.5rem 1rem; text-decoration: none; border-radius: 4px;">
                Logout
            </a>
        </div>
    </div>
</nav>
