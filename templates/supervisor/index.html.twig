{% extends 'base.html.twig' %}

{% block title %}Supervisor Dashboard
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<style>:root
	{
		--bg-dark: #0f172a;
		--card-bg: #1e293b;
		--card-border: #334155;
		--accent-blue: #3b82f6;
		--text-primary: #f8fafc;
		--text-secondary: #94a3b8;
		--sidebar-width: 280px;
	}

	body {
		background-color: var(--bg-dark);
		color: var(--text-primary);
		font-family: 'Inter', system-ui, -apple-system, sans-serif;
		margin: 0;
		overflow-x: hidden;
	}

	.dashboard-container {
		margin-left: var(--sidebar-width);
		padding: 2rem;
		min-height: 100vh;
	}

	.flash-messages-container {
		margin-left: var(--sidebar-width);
	}

	.glass-card {
		background: rgba(30, 41, 59, 0.7);
		backdrop-filter: blur(10px);
		border: 1px solid var(--card-border);
		border-radius: 12px;
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
	}

	.glass-card:hover {
		transform: translateY(-5px);
		border-color: var(--accent-blue);
		box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.3), 0 8px 10px -6px rgba(0, 0, 0, 0.3);
	}

	.section-header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin-bottom: 2rem;
	}

	.page-title {
		font-size: 1.875rem;
		font-weight: 700;
		letter-spacing: -0.025em;
		color: #fff;
	}

	.team-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
		gap: 1.5rem;
	}

	.team-card {
		padding: 1.5rem;
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.team-name {
		font-size: 1.25rem;
		font-weight: 600;
		color: var(--accent-blue);
	}

	.team-meta {
		font-size: 0.875rem;
		color: var(--text-secondary);
	}

	.investigator-list {
		margin-top: 0.5rem;
		border-top: 1px solid var(--card-border);
		padding-top: 1rem;
	}

	.investigator-item {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		margin-bottom: 0.5rem;
		padding: 0.5rem;
		border-radius: 8px;
		background: rgba(255, 255, 255, 0.03);
	}

	.avatar-small {
		width: 24px;
		height: 24px;
		background: var(--card-border);
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		font-size: 10px;
	}

	.team-badge {
		background: rgba(59, 130, 246, 0.1);
		border: 1px solid rgba(59, 130, 246, 0.2);
		color: var(--accent-blue);
		padding: 0.25rem 0.75rem;
		border-radius: 9999px;
		font-size: 0.75rem;
		font-weight: 600;
	}

	.btn-manage {
		background: rgba(255, 255, 255, 0.03);
		border: 1px solid var(--card-border);
		color: var(--text-secondary);
		padding: 0.75rem;
		border-radius: 10px;
		text-align: center;
		text-decoration: none;
		font-size: 0.875rem;
		font-weight: 500;
		transition: all 0.2s;
		display: block;
		width: 100%;
	}

	.btn-manage:hover {
		background: var(--card-border);
		color: #fff;
		border-color: var(--text-secondary);
	}

	/* Activity Feed Styles */
	.dashboard-layout {
		display: grid;
		grid-template-columns: 2fr 1fr;
		gap: 2rem;
	}

	@media(max-width: 1200px) {
		.dashboard-layout {
			grid-template-columns: 1fr;
		}
	}

	.glass-panel {
		background: rgba(30, 41, 59, 0.4);
		backdrop-filter: blur(12px);
		border: 1px solid var(--card-border);
		border-radius: 20px;
		padding: 1.5rem;
	}

	.panel-header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin-bottom: 1.5rem;
	}

	.panel-title {
		font-size: 1.25rem;
		font-weight: 800;
		color: #fff;
		display: flex;
		align-items: center;
		gap: 0.75rem;
		margin: 0;
	}

	.activity-feed {
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
		position: relative;
	}

	.activity-feed::before {
		content: '';
		position: absolute;
		left: 19px;
		top: 0;
		bottom: 0;
		width: 2px;
		background: var(--card-border);
	}

	.activity-node {
		display: flex;
		gap: 1.5rem;
		position: relative;
	}

	.node-icon {
		width: 40px;
		height: 40px;
		border-radius: 50%;
		background: var(--bg-dark);
		border: 2px solid var(--card-border);
		display: flex;
		align-items: center;
		justify-content: center;
		z-index: 1;
		color: var(--accent-blue);
		flex-shrink: 0;
	}

	.node-content {
		flex: 1;
		padding-bottom: 1.5rem;
	}

	.node-action {
		font-weight: 700;
		font-size: 0.9rem;
		color: #fff;
		margin-bottom: 0.25rem;
	}

	.node-time {
		font-size: 0.75rem;
		color: var(--text-secondary);
		margin-bottom: 0.5rem;
	}

	.node-desc {
		font-size: 0.85rem;
		color: var(--text-secondary);
		line-height: 1.4;
	}

	.investigator-list {
		margin-top: 1rem;
		padding-top: 1rem;
		border-top: 1px solid rgba(255, 255, 255, 0.05);
	}

	.btn-premium {
		background: var(--accent-blue);
		color: white;
		border: none;
		padding: 0.625rem 1.25rem;
		border-radius: 8px;
		font-weight: 600;
		transition: all 0.2s;
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		text-decoration: none;
	}

	.btn-premium:hover {
		background: #2563eb;
		transform: translateY(-2px);
		color: white;
		box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
	}

	.modal-content {
		background-color: var(--card-bg);
		border: 1px solid var(--card-border);
		color: var(--text-primary);
	}

	.modal-header,
	.modal-footer {
		border-color: var(--card-border);
	}

	.form-control {
		background-color: var(--bg-dark);
		border-color: var(--card-border);
		color: var(--text-primary);
	}

	.form-control:focus {
		background-color: var(--bg-dark);
		border-color: var(--accent-blue);
		color: var(--text-primary);
		box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.2);
	}

	/* Empty state */
	.empty-state {
		text-align: center;
		padding: 4rem 2rem;
		color: var(--text-secondary);
	}

	/* Stats styles */
	.stats-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
		gap: 1.5rem;
		margin-bottom: 2.5rem;
	}

	.stat-card {
		padding: 1.5rem;
		display: flex;
		align-items: center;
		gap: 1.25rem;
	}

	.stat-icon {
		width: 48px;
		height: 48px;
		border-radius: 12px;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.stat-icon.teams {
		background: rgba(59, 130, 246, 0.1);
		color: #3b82f6;
	}
	.stat-icon.cases {
		background: rgba(168, 85, 247, 0.1);
		color: #a855f7;
	}
	.stat-icon.investigators {
		background: rgba(16, 185, 129, 0.1);
		color: #10b981;
	}

	.stat-value {
		font-size: 1.5rem;
		font-weight: 700;
		color: #fff;
		line-height: 1;
	}

	.stat-label {
		font-size: 0.75rem;
		font-weight: 600;
		color: var(--text-secondary);
		text-uppercase: uppercase;
		letter-spacing: 0.05em;
		margin-top: 0.25rem;
	}
</style>{% endblock %}{% block body %}
{% include 'componant/sidebar_supervisor.html.twig' %}

<div class="dashboard-container">
	<header class="section-header">
		<div>

			<h1 style="font-size: 2.5rem; font-weight: 900; margin: 0; background: linear-gradient(to right, #fff, #94a3b8); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">supervisor Dashboard</h1>
			<p style="color: var(--text-secondary); margin-top: 0.5rem; font-weight: 500;">
				Welcome back, Agent
				{{ app.user.lastName }}
			</p>
		</div>
		<div class="d-flex gap-3">
			<a href="{{ path('app_supervisor_casework_new') }}" class="btn-premium text-decoration-none">
				<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewbox="0 0 24 24" stroke="currentColor">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
				</svg>
				New Case
			</a>
			<a href="{{ path('app_supervisor_team_new') }}" class="btn-premium text-decoration-none">
				<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewbox="0 0 24 24" stroke="currentColor">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
				</svg>
				New Team
			</a>
		</div>
	</header>

	<div class="stats-grid">
		<div class="glass-card stat-card">
			<div class="stat-icon teams">
				<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewbox="0 0 24 24" stroke="currentColor">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
				</svg>
			</div>
			<div>
				<div class="stat-value">{{ stats.total_teams }}</div>
				<div class="stat-label">Total Teams</div>
			</div>
		</div>

		<div class="glass-card stat-card">
			<div class="stat-icon cases">
				<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewbox="0 0 24 24" stroke="currentColor">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"/>
				</svg>
			</div>
			<div>
				<div class="stat-value">{{ stats.total_cases }}</div>
				<div class="stat-label">Total Cases</div>
			</div>
		</div>

		<div class="glass-card stat-card">
			<div class="stat-icon investigators">
				<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewbox="0 0 24 24" stroke="currentColor">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
				</svg>
			</div>
			<div>
				<div class="stat-value">{{ stats.total_investigators }}</div>
				<div class="stat-label">Total Investigators</div>
			</div>
		</div>
	</div>

	<div class="dashboard-layout">
		<div class="main-column">
			<h2 class="panel-title mb-4">
				<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewbox="0 0 24 24" stroke="currentColor">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
				</svg>
				Active Teams
			</h2>
			{% if teams is not empty %}
				<div class="team-grid">
					{% for team in teams %}
						<div class="glass-card team-card">
							<div class="d-flex justify-content-between align-items-center mb-2">
								<h3 class="team-name mb-0">{{ team.name }}</h3>
								<span class="team-badge">
									{{ team.investigateurs|length }}
									Member{{ team.investigateurs|length != 1 ? 's' : '' }}
								</span>
							</div>
							<div class="team-meta">
								<svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="none" viewbox="0 0 24 24" stroke="currentColor" class="me-1">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
								</svg>
								{{ team.createdAt|date('M d, Y') }}
							</div>

							<div class="investigator-list">
								<h6 class="small text-uppercase tracking-wider font-weight-bold mb-3">Team Members</h6>
								{% for investigator in team.investigateurs %}
									<div class="investigator-item">
										<div class="avatar-small">
											{{ investigator.email|first|upper }}
										</div>
										<span class="small">{{ investigator.email }}</span>
									</div>
								{% else %}
									<div class="text-center py-3 opacity-50 small">
										<em>No investigators assigned</em>
									</div>
								{% endfor %}
							</div>

							<div class="mt-4">
								<a href="{{ path('app_supervisor_team_manage', {id: team.id}) }}" class="btn-manage">
									Manage Team Members
								</a>
							</div>
						</div>
					{% endfor %}
				</div>
			{% else %}
				<div class="glass-card empty-state">
					<svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="none" viewbox="0 0 24 24" stroke="currentColor" class="mb-3 opacity-20">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
					</svg>
					<h3>No teams yet</h3>
					<p>Create your first team to start managing investigators.</p>
					<a href="{{ path('app_supervisor_team_new') }}" class="btn btn-primary mt-3">
						Create Team
					</a>
				</div>
			{% endif %}
		</div>

		<div class="side-column">
			<div class="glass-panel">
				<div class="panel-header">
					<h2 class="panel-title">
						<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewbox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
						</svg>
						Recent Activity
					</h2>
				</div>

				<div class="activity-feed">
					{% for activity in recent_activities %}
						<div class="activity-node">
							<div class="node-icon">
								{% if 'Integrity' in activity.action %}
									<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="none" viewbox="0 0 24 24" stroke="currentColor">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
									</svg>
								{% else %}
									<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="none" viewbox="0 0 24 24" stroke="currentColor">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
									</svg>
								{% endif %}
							</div>
							<div class="node-content">
								<div class="node-action">{{ activity.action }}</div>
								<div class="node-time">{{ activity.dateUpdate|date('M d, H:i') }}</div>
								<div class="node-desc">
									{{ activity.description|slice(0, 100) }}{{ activity.description|length > 100 ? '...' : '' }}
								</div>
							</div>
						</div>
					{% else %}
						<div class="text-center py-4 opacity-50 small">
							<em>No forensic activity logged yet.</em>
						</div>
					{% endfor %}
				</div>
			</div>
		</div>
	</div>
</div>{% endblock %}
