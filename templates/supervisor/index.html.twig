{% extends 'base.html.twig' %}

{% block title %}Supervisor Dashboard
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<style>:root
	{
		--bg-dark: #0f172a;
		--card-bg: #1e293b;
		--card-border: #334155;
		--accent-blue: #3b82f6;
		--text-primary: #f8fafc;
		--text-secondary: #94a3b8;
		--sidebar-width: 280px;
	}

	body {
		background-color: var(--bg-dark);
		color: var(--text-primary);
		font-family: 'Inter', system-ui, -apple-system, sans-serif;
		margin: 0;
		overflow-x: hidden;
	}

	.dashboard-container {
		margin-left: var(--sidebar-width);
		padding: 2rem;
		min-height: 100vh;
	}

	.flash-messages-container {
		margin-left: var(--sidebar-width);
	}

	.glass-card {
		background: rgba(30, 41, 59, 0.7);
		backdrop-filter: blur(10px);
		border: 1px solid var(--card-border);
		border-radius: 12px;
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
	}

	.glass-card:hover {
		transform: translateY(-5px);
		border-color: var(--accent-blue);
		box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.3), 0 8px 10px -6px rgba(0, 0, 0, 0.3);
	}

	.section-header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin-bottom: 2rem;
	}

	.page-title {
		font-size: 1.875rem;
		font-weight: 700;
		letter-spacing: -0.025em;
		color: #fff;
	}

	.team-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
		gap: 1.5rem;
	}

	.team-card {
		padding: 1.5rem;
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.team-name {
		font-size: 1.25rem;
		font-weight: 600;
		color: var(--accent-blue);
	}

	.team-meta {
		font-size: 0.875rem;
		color: var(--text-secondary);
	}

	.investigator-list {
		margin-top: 0.5rem;
		border-top: 1px solid var(--card-border);
		padding-top: 1rem;
	}

	.investigator-item {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		margin-bottom: 0.5rem;
		padding: 0.5rem;
		border-radius: 8px;
		background: rgba(255, 255, 255, 0.03);
	}

	.avatar-small {
		width: 24px;
		height: 24px;
		background: var(--card-border);
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		font-size: 10px;
	}

	.team-badge {
		background: rgba(59, 130, 246, 0.1);
		border: 1px solid rgba(59, 130, 246, 0.2);
		color: var(--accent-blue);
		padding: 0.25rem 0.75rem;
		border-radius: 9999px;
		font-size: 0.75rem;
		font-weight: 600;
	}

	.btn-manage {
		background: rgba(255, 255, 255, 0.03);
		border: 1px solid var(--card-border);
		color: var(--text-secondary);
		padding: 0.75rem;
		border-radius: 10px;
		text-align: center;
		text-decoration: none;
		font-size: 0.875rem;
		font-weight: 500;
		transition: all 0.2s;
		display: block;
		width: 100%;
	}

	.btn-manage:hover {
		background: var(--card-border);
		color: #fff;
		border-color: var(--text-secondary);
	}

	.investigator-list {
		margin-top: 1rem;
		padding-top: 1rem;
		border-top: 1px solid rgba(255, 255, 255, 0.05);
	}

	.btn-premium {
		background: var(--accent-blue);
		color: white;
		border: none;
		padding: 0.625rem 1.25rem;
		border-radius: 8px;
		font-weight: 600;
		transition: all 0.2s;
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		text-decoration: none;
	}

	.btn-premium:hover {
		background: #2563eb;
		transform: translateY(-2px);
		color: white;
		box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
	}

	.modal-content {
		background-color: var(--card-bg);
		border: 1px solid var(--card-border);
		color: var(--text-primary);
	}

	.modal-header,
	.modal-footer {
		border-color: var(--card-border);
	}

	.form-control {
		background-color: var(--bg-dark);
		border-color: var(--card-border);
		color: var(--text-primary);
	}

	.form-control:focus {
		background-color: var(--bg-dark);
		border-color: var(--accent-blue);
		color: var(--text-primary);
		box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.2);
	}

	/* Empty state */
	.empty-state {
		text-align: center;
		padding: 4rem 2rem;
		color: var(--text-secondary);
	}
</style>{% endblock %}{% block body %}
{% include 'componant/sidebar_supervisor.html.twig' %}

<div class="dashboard-container">
	<header class="section-header">
		<div>
			<h1 class="page-title">Supervisor Dashboard</h1>
			<p class="text-secondary small">Welcome back,
				{{ app.user.email }}</p>
		</div>
		<div class="d-flex gap-3">
			<a href="{{ path('app_supervisor_casework_new') }}" class="btn-premium text-decoration-none">
				<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewbox="0 0 24 24" stroke="currentColor">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
				</svg>
				New Case
			</a>
			<a href="{{ path('app_supervisor_team_new') }}" class="btn-premium text-decoration-none">
				<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewbox="0 0 24 24" stroke="currentColor">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
				</svg>
				New Team
			</a>
		</div>
	</header>

	{% if teams is not empty %}
		<div class="team-grid">
			{% for team in teams %}
				<div class="glass-card team-card">
					<div class="d-flex justify-content-between align-items-center mb-2">
						<h3 class="team-name mb-0">{{ team.name }}</h3>
						<span class="team-badge">
							{{ team.investigateurs|length }}
							Member{{ team.investigateurs|length != 1 ? 's' : '' }}
						</span>
					</div>
					<div class="team-meta">
						<svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="none" viewbox="0 0 24 24" stroke="currentColor" class="me-1">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
						</svg>
						{{ team.createdAt|date('M d, Y') }}
					</div>

					<div class="investigator-list">
						<h6 class="small text-uppercase tracking-wider font-weight-bold mb-3">Team Members</h6>
						{% for investigator in team.investigateurs %}
							<div class="investigator-item">
								<div class="avatar-small">
									{{ investigator.email|first|upper }}
								</div>
								<span class="small">{{ investigator.email }}</span>
							</div>
						{% else %}
							<div class="text-center py-3 opacity-50 small">
								<em>No investigators assigned</em>
							</div>
						{% endfor %}
					</div>

					<div class="mt-4">
						<a href="{{ path('app_supervisor_team_manage', {id: team.id}) }}" class="btn-manage">
							Manage Team Members
						</a>
					</div>
				</div>
			{% endfor %}
		</div>
	{% else %}
		<div class="glass-card empty-state">
			<svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="none" viewbox="0 0 24 24" stroke="currentColor" class="mb-3 opacity-20">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
			</svg>
			<h3>No teams yet</h3>
			<p>Create your first team to start managing investigators.</p>
			<a href="{{ path('app_supervisor_team_new') }}" class="btn btn-primary mt-3">
				Create Team
			</a>
		</div>
	{% endif %}
</div>{% endblock %}
