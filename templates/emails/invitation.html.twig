{% extends 'base.html.twig' %}

{% block body %}
	<div style="font-family: Arial, sans-serif; max-width: 600px; margin: 0 auto; padding: 20px; color: #333;">
		<h1 style="color: #2563eb;">You've been invited!</h1>
		<p>Hello,</p>
		<p>You have been invited to join the Digital Evidence platform as a
			<strong>{{ role }}</strong>.</p>
		<p>Please click the link below to set up your account and password:</p>

		<p style="margin: 30px 0;">
			<a href="{{ link }}" style="background-color: #2563eb; color: white; padding: 12px 24px; text-decoration: none; border-radius: 6px; font-weight: bold;">Set Up Account</a>
		</p>

		<p>Or copy and paste this link into your browser:</p>
		<p>
			<a href="{{ link }}">{{ link }}</a>
		</p>

		<p>This link is unique to you. Please do not share it.</p>

		<hr style="border: none; border-top: 1px solid #eee; margin: 30px 0;">
		<p style="font-size: 12px; color: #888;">If you were not expecting this invitation, please ignore this email.</p>
	</div>
{% endblock %}
