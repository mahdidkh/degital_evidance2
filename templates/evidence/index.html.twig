{% extends 'base.html.twig' %}

{% block title %}Evidence index
{% endblock %}

{% block body %}
	<h1>Evidence index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Title</th>
				<th>Description</th>
				<th>Remark</th>
				<th>File</th>
				<th>Hash</th>
				<th>Actions</th>
			</tr>
		</thead>

		<tbody>
			{% for evidence in evidences %}
				<tr>
					<td>{{ evidence.id }}</td>
					<td>{{ evidence.title }}</td>
					<td>{{ evidence.description }}</td>
					<td>{{ evidence.remarque }}</td>

					<td>
						{% if evidence.storedFilename %}
							<a href="{{ asset('uploads/evidence/' ~ evidence.storedFilename) }}" target="_blank">
								Open file
							</a>
						{% else %}
							<em>No file available</em>
						{% endif %}
					</td>

					<td>
						{% if evidence.fileHash %}
							<small>{{ evidence.fileHash }}</small>
						{% else %}
							-
						{% endif %}
					</td>

					<td>
						<a class="btn btn-info btn-sm" href="{{ path('app_evidence_show', {'id': evidence.id}) }}">View</a>
						<a class="btn btn-warning btn-sm" href="{{ path('app_evidence_edit', {'id': evidence.id}) }}">Edit</a>

						
						<form action="{{ path('app_evidence_delete', {'id': evidence.id}) }}" method="post" style="display: inline-block;" onsubmit="return confirm('Are you sure you want to delete this item? ');">

							<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ evidence.id) }}">
							<button class="btn btn-danger btn-sm">Delete</button>
						</form>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="7">No data found .</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a class="btn btn-primary" href="{{ path('app_evidence_new') }}">Create a new evidence </a>

{% endblock %}
