{% extends 'admin/layout.html.twig' %}

{% block title %}Invite User
{% endblock %}

{% block admin_content %}
	<header class="page-header">
		<div>
			<h1 class="page-title">Invite Forensic Member</h1>
			<p style="color: var(--text-secondary); font-weight: 500;">Add a new Supervisor or Investigator to the platform</p>
		</div>
	</header>

	<div style="max-width: 800px; margin: 0 auto;">
		<div style="background: var(--card-bg); backdrop-filter: blur(16px); border: 1px solid var(--border-glass); padding: 3rem; border-radius: 28px; box-shadow: 0 10px 30px -10px rgba(0, 0, 0, 0.5);">
			<h2 style="margin-bottom: 2rem; display: flex; align-items: center; gap: 0.75rem; font-size: 1.5rem;">
				<span class="material-symbols-outlined" style="color: var(--accent-blue);">mail</span>
				Send Invitation Link
			</h2>

			{{ form_start(form, {'attr': {'class': 'auth-form'}}) }}

			<div class="form-group" style="margin-bottom: 1.5rem;">
				{{ form_label(form.email, null, {'label_attr': {'class': 'form-label', 'style': 'color: var(--text-primary); margin-bottom: 0.5rem; display: block;'}}) }}
				{{ form_widget(form.email, {'attr': {'class': 'form-input', 'style': 'background: rgba(15, 23, 42, 0.6); color: white; border: 1px solid var(--border-glass); padding: 0.75rem 1rem; border-radius: 12px; width: 100%;', 'placeholder': 'forensic.colleague@example.com'}}) }}
				{{ form_errors(form.email) }}
			</div>

			<div class="form-group" style="margin-bottom: 2rem;">
				{{ form_label(form.role, null, {'label_attr': {'class': 'form-label', 'style': 'color: var(--text-primary); margin-bottom: 0.5rem; display: block;'}}) }}
				{{ form_widget(form.role, {'attr': {'class': 'form-input', 'style': 'background: rgba(15, 23, 42, 0.6); color: white; border: 1px solid var(--border-glass); padding: 0.75rem 1rem; border-radius: 12px; width: 100%;'}}) }}
				{{ form_errors(form.role) }}
			</div>

			<div style="display: flex; justify-content: flex-end; margin-top: 2rem;">
				{{ form_widget(form.submit, {
					'label': 'Send Invitation Link',
					'attr': {
						'style': 'background: var(--accent-blue); color: white; border: none; padding: 1rem 2rem; border-radius: 14px; font-weight: 700; cursor: pointer; transition: all 0.2s;'
					}
				}) }}
			</div>

			{{ form_end(form) }}
		</div>
	</div>

	<style>
		button:hover {
			transform: scale(1.02);
			filter: brightness(1.1);
		}
	</style>
{% endblock %}
